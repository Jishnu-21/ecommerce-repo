function applyFilters() {
  // Get the selected price range
  const minPrice = document.getElementById("priceSlider").min;
  const maxPrice = document.getElementById("priceSlider").value;

  // Get the selected category IDs
  const selectedCategories = Array.from(document.querySelectorAll('input[name="category"]:checked')).map(checkbox => checkbox.value);

  // Get the selected sorting option
  const sortSelect = document.getElementById("sortSelect");
  const selectedSortOption = sortSelect.value;

  // Construct the query string with selected filters and sorting option
  const queryParams = new URLSearchParams();
  queryParams.append('minPrice', minPrice);
  queryParams.append('maxPrice', maxPrice);
  selectedCategories.forEach(category => {
    queryParams.append('category', category);
  });
  queryParams.append('sort', selectedSortOption);

  // Check if there is already a search query parameter
  const searchParams = new URLSearchParams(window.location.search);
  const searchQuery = searchParams.get('search');
  if (searchQuery) {
    queryParams.append('search', searchQuery);
  }

  // Redirect to the homepage with the applied filters and sorting option
  window.location.href = `/?${queryParams.toString()}`;
}

